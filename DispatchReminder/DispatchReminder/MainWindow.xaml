<Window x:Class="DispatchReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DispatchReminder"
        mc:Ignorable="d"
        Title="Dispatch Timer" Height="168" Width="248" Background="#FF3F3F46" ResizeMode="NoResize" Topmost="True">
    <Grid Margin="0,0,0,0">
        <Label x:Name="l_Time" HorizontalAlignment="Center" Foreground="White" FontSize="36" VerticalAlignment="Top" Margin="18,7,16,0" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="37,89,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="121,89,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Click"/>
        <Label x:Name="l_nextAlarm" Content="Next dispatch: 17:34:13" HorizontalAlignment="Center" Foreground="#FF9E9E9E" FontSize="18" VerticalAlignment="Top" Margin="10,53,10,0" Background="{x:Null}" Width="222" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
